@page
@model VetPlatform.Store.Pages.CreateStoreModel
@{
    ViewData["Title"] = "Create your Store";
}

<h3>Create your own Store</h3>
<br />
<form method="post" enctype="multipart/form-data">
    <small id="emailHelp" class="form-text text-muted">User information</small>
    <hr />
    <div class="form-group">
        <label asp-for="Store.Tenant.Name">Name</label>
        <input type="text" class="form-control" placeholder="Store Name" asp-for="Store.Tenant.Name">
    </div>
    <div class="form-group">
        <label asp-for="Store.Tenant.Domain">Domain</label>
        <div class="input-group mb-2">
            <input type="text" class="form-control" placeholder="Store Domain" asp-for="Store.Tenant.Domain">
            <div class="input-group-append">
                <div class="input-group-text">.vetplatform.com</div>
            </div>
        </div>
        <small class="form-text text-muted">ex. mystore.vetplatform.com</small>
    </div>
    <div class="form-group">
        <label asp-for="Store.Tenant.Logo">Logo</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" asp-for="Store.Tenant.Logo">
            <label class="custom-file-label" asp-for="Store.Tenant.Logo">Choose file</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Store.Tenant.Theme">Theme Color &nbsp;</label>
       <input type="color" asp-for="Store.Tenant.Theme"/>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>